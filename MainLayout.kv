<MainLayout>:
    Button:
        id: login_btn
        size_hint: None, None
        size: 270, 45
        pos_hint: {'center_x': .5, 'center_y': .5}

        on_press:
            login_img.source = 'images/eve-sso-login-white-large.png'

        on_release:
            login_img.source = 'images/eve-sso-login-black-large.png'
            root.redirect_to_eve()
        Image:
            id: login_img
            source: 'images/eve-sso-login-black-large.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: self.texture_size
